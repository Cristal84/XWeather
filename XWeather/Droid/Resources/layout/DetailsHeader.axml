<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/weather_header_height">
    <TextView
        android:text="San Francisco"
        android:gravity="center_horizontal|bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/DetailsHeader_locationLabel"
        android:textSize="@dimen/weather_location_title" />
    <TextView
        android:text="Text"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/DetailsHeader_conditionLabel" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_white_50" />
</LinearLayout>