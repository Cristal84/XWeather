<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dip"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall">
    <TextView
        android:text="00:00 mm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/HourlyListItem_hourLabel"
        android:gravity="center_vertical"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right">
        <ImageView
            android:src="@drawable/cloudy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/HourlyListItem_iconImageView"
            android:scaleType="center"
            android:paddingRight="4dp" />
    </LinearLayout>
    <TextView
        style="@style/blueTextBright"
        android:text="0%"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/HourlyListItem_precipLabel"
        android:gravity="center_vertical|left"
        android:layout_weight="1"
        android:paddingLeft="4dp" />
    <TextView
        android:text="00Â°"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/HourlyListItem_tempLabel"
        android:gravity="center_vertical|right"
        android:layout_weight="1" />
</LinearLayout>